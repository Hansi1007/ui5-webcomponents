<div
    class="{{classessni.root}}"
    tabindex="0"
    @mousedown="{{_onmousedown}}"
    @mouseup="{{_onmouseup}}"
    @focusin="{{_onfocusin}}"
    @focusout="{{_onfocusout}}"
    @keydown="{{_onkeydown}}"
>
    {{#if icon}}
        <div class="ui5-sni-icon">
            <ui5-icon name="{{icon}}"></ui5-icon>
        </div>
    {{/if}}

    {{#if hasOverflow}}
        <span class="ui5-sni-bottom-arrow"></span>
    {{/if}}

    <ui5-title level="H5">{{text}}</ui5-title>

    {{#if expandable}}
        <div
        class="ui5-sni-icon ui5-sni-arrow"
        @click="{{toggleExpanded}}"
        >
            <ui5-icon name="{{activeIcon}}"></ui5-icon>
        </div>
    {{/if}}

</div>
{{#unless _collapsed}}
    <div class="{{classessni.children}}">
        {{#if expanded}}
            <slot></slot>
        {{/if}}
    </div>
{{/unless}}